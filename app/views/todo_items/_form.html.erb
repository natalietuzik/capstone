<%= form_with model: todo_item, class: "form-card" do |f| %>
  <% if todo_item.errors.any? %>
    <div class="error-messages">
      <% todo_item.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: "form-control", placeholder: "What needs to be done?", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :notes, "Notes (optional)" %>
    <%= f.text_area :notes, class: "form-control", rows: 3, placeholder: "Any extra details..." %>
  </div>
  <div class="form-group">
    <%= f.label :priority %>
    <%= f.select :priority, TodoItem::PRIORITIES.map { |k, v| [v, k] }, {}, class: "form-control" %>
  </div>
  <% if todo_item.persisted? %>
    <div class="form-group form-check">
      <%= f.check_box :completed, class: "form-check-input" %>
      <%= f.label :completed, "Mark as completed", class: "form-check-label" %>
    </div>
  <% end %>
  <%= f.submit todo_item.persisted? ? "Update Item" : "Add Item", class: "btn btn-primary" %>
  <%= link_to "Cancel", todo_items_path, class: "btn btn-secondary" %>
<% end %>
