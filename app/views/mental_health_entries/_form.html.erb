<%= form_with model: entry, class: "form-card" do |f| %>
  <% if entry.errors.any? %>
    <div class="error-messages">
      <% entry.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
      <% end %>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :date %>
    <%= f.date_field :date, class: "form-control", required: true %>
  </div>
  <div class="form-group">
    <%= f.label :mood, "Mood (1-10)" %>
    <%= f.number_field :mood, class: "form-control", min: 1, max: 10, required: true %>
  </div>
  <div class="form-group">
    <%= f.label :anxiety, "Anxiety Level (1-10)" %>
    <%= f.number_field :anxiety, class: "form-control", min: 1, max: 10, required: true %>
  </div>
  <div class="form-group">
    <%= f.label :sleep_hours, "Sleep Hours (optional)" %>
    <%= f.number_field :sleep_hours, class: "form-control", min: 0, max: 24, step: 0.5 %>
  </div>
  <div class="form-group">
    <%= f.label :journal, "Journal (optional)" %>
    <%= f.text_area :journal, class: "form-control", rows: 5 %>
  </div>
  <%= f.submit "Save Entry", class: "btn btn-primary" %>
<% end %>
