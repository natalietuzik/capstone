<!DOCTYPE html>
<html>
  <head>
    <title>Daily Wellness</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
  </head>
  <body>
    <nav class="navbar">
      <div class="nav-brand"><a href="/">ðŸŒ¿ Daily Wellness</a></div>
      <div class="nav-links">
        <% if logged_in? %>
          <%= link_to "Dashboard", root_path %>
          <%= link_to "Planner", planner_items_path %>
          <%= link_to "Calendar", calendar_path %>
          <%= link_to "Medications", medications_path %>
          <%= link_to "Mental Health", mental_health_entries_path %>
          <%= link_to "Logout", logout_path, data: { turbo_method: :delete } %>
        <% else %>
          <%= link_to "Login", login_path %>
          <%= link_to "Sign Up", signup_path %>
        <% end %>
      </div>
    </nav>

    <div class="flash-messages">
      <% if flash[:notice] %>
        <div class="flash flash-notice"><%= flash[:notice] %></div>
      <% end %>
      <% if flash[:alert] %>
        <div class="flash flash-alert"><%= flash[:alert] %></div>
      <% end %>
    </div>

    <main class="container">
      <%= yield %>
    </main>
  </body>
</html>
